{
  "compilerOptions": {
    "outDir": "./dist", // 编译后的文件输出到 dist 文件夹
    "rootDir": "./src", // 指定源码的根目录
    "target": "ES6",
    "module": "CommonJS",
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"], // 包括 src 目录下所有文件
  "exclude": ["node_modules"] // 排除 node_modules
}
